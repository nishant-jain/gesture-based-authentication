
<RelativeLayout android:layout_height="match_parent" 
    android:layout_width="match_parent" 
    xmlns:tools="http://schemas.android.com/tools" 
    xmlns:android="http://schemas.android.com/apk/res/android">
     <TextView android:layout_height="wrap_content" 
         android:layout_width="wrap_content"
          tools:context=".MainActivity" 
          android:text="@string/hello_world"
           android:padding="@dimen/padding_medium"
            android:layout_centerVertical="true" 
            android:layout_centerHorizontal="true" 
            android:id="@+id/textView1"/>
      <Button android:layout_height="wrap_content" 
          android:layout_width="wrap_content" 
          android:text="Start" android:id="@+id/button1" 
          android:onClick="start" 
          android:layout_toLeftOf="@+id/textView1" 
          android:layout_marginTop="44dp" android:layout_below="@+id/textView1"/> 
          <Button android:layout_height="wrap_content" android:layout_width="wrap_content" 
              android:text="Stop" android:id="@+id/button2" 
              android:onClick="stop" android:layout_marginLeft="48dp" 
              android:layout_alignLeft="@+id/textView1" android:layout_alignBottom="@+id/button1"/> 
              </RelativeLayout>